{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["src/**/*", "playwright/tests/**/*.spec.ts"],
  "exclude": ["node_modules", "dist"]
}
